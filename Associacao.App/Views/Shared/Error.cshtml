@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro" : Model.Titulo;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! ocorreu um erro, mas não se preocupe, Nosso time será a visado e iremos corrigir em breve.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
