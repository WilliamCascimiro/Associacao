@model Associacao.App.Models.PessoaViewModel
@*@model Associacao.App.Models.PessoaMensalidadeViewModel*@

@{
    ViewData["Title"] = "Editar pessoa";
}

<h3>@ViewData["Title"]</h3>

<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <partial name="_DadosFormulario" />
                <div class="form-group col-md-1">
                    <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top: 60px" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
