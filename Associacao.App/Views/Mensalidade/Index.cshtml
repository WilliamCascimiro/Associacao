@model IEnumerable<Associacao.App.Models.MensalidadeViewModel>

@{
    ViewData["Title"] = "Lista de mensalidades";
    var listaTipoPagamento = (IEnumerable<SelectListItem>)ViewBag.listaTipoPagamento;
}

<h1>@ViewData["Title"]</h1>

<p>
    <br/>
</p>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index">
            <div class="row">
                <div class="form-group col-md-3">
                    <label class="control-label">Vencimento inicial</label>
                    <input name="dataVencimentoInicial" class="form-control" type="date" value="@ViewBag.DataVencimentoInicial"/>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Vencimento final</label>
                    <input name="dataVencimentoFinal" class="form-control" type="date" value="@ViewBag.DataVencimentoFinal" />
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label">Pagamento</label>
                    @Html.DropDownList("statusPagamento", new SelectList(listaTipoPagamento, "Value", "Text", ViewBag.statusPagamento), new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                </div>
                <div class="form-group col-md-1">
                    <input type="submit" value="Buscar" class="btn btn-primary" style="margin-top: 32px" />
                </div>
            </div>
        </form>
    </div>
</div>
<br/>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Pago
            </th>
            <th>
                Data de Vencimento
            </th>
            <th>
                Data de Pagamento
            </th>
            <th>
                Valor
            </th>
            <th>
                Pessoa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Pago)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16" style=" color: #28a745">
                        <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z" />
                        <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                    </svg>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-square-fill" viewBox="0 0 16 16" style=" color: firebrick">
                        <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                }
            </td>
            <td>
                @item.DataVencimento
            </td>
            <td>
                @item.DataPagamento
            </td>
            <td>
                @item.Valor
            </td>
            <td>
                @item.Pessoa.Nome
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
